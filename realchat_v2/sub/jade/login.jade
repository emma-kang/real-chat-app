html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-with, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.13/css/all.css', integrity='sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp', crossorigin='anonymous')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css', integrity='sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B', crossorigin='anonymous')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js')
    link(href='/css/main.css', rel='stylesheet')
    title Login
  .form
    .container.login-form
      form(action='/login/success', method='post')
        h2.h2.mb-3.font-weight-normal.text-center RealChat Login
        .form-group
          label.sr-only(for='usr-label') ID
          input#id.form-control(type='text', placeholder='User ID', name='id', required='', autofocus='')
        .form-group
          label.sr-only(for='pwd-label') Password
          input#pwd.form-control(type='password', placeholder='Password', name='pwd')
        button.btn.btn-block.btn-dark(type='submit') Login
      .signup-link
        p
          | New to RealChat? 
          a(href='/signup') Sign up for an account


